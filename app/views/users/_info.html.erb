<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
 
  <tr>
    <th>follows</th>
    <td><%= user.followings.count %></td>
  </tr>
  <tr>
    <th>followers</th>
    <td><%= user.followers.count %></td>
  </tr>
</table>

<div class='row'>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー解除', unfollow_path(user_id: user.id), method: :delete, class: "btn btn-outline-danger btn-block" %>
    <% else %>
      <%= link_to 'フォローする', follow_path(user_id: user.id), method: :post, class: "btn btn-outline-primary btn-block" %>
    <% end %>
  <% end %>
</div>
